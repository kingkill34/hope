<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.duowan.hope.test.dao.UserDao">

	<select id="getList" parameterType="map">
		select * from user where
		<foreach collection="orList" index="key" item="sqlOr">
			#{sqlOr.linkOperation} (
			<foreach collection="sqlOr.list" item="sqlOrContent">
				#{linkOperation} #{field} #{operation} #{value} 
			</foreach>
			)
		</foreach>

	</select>

</mapper>
